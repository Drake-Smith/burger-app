<h1>Eat A Burger!</h1>
<h2>It's good for you!</h2>

<h3>List of Burgers</h3>
<ul>
	{{#each burgers}}
		{{#unless this.devoured}}
		<li>
			{{this.burger_name}}
			{{this.id}}

			<form action="index/updateOne/{{this.id}}?_method=PUT" method="POST">
				<input type="hidden" name="devoured" value="true">
					<button type="submit">Devour It!</button>
			</form>
		</li>
		{{/unless}}
	{{/each}}
</ul>

<h3>Devoured Burgers</h3>
<ul>
	{{#each burgers}}
		{{#if this.devoured}}
		<li>
			{{this.burger_name}}
			{{this.id}}

			<form action="index/updateOne/{{this.id}}?_method=PUT" method="POST">
            	<input type="hidden" name="devoured" value="false">
          	</form>
		</li>
		{{/if}}
	{{/each}}
</ul>

<h3>Add A Burger</h3>

<form class="create-update-form" action="index/insertOne" method="POST">
	<div class="form-group">
		<label for="burgername">Burger</label>
		<input type="text" id="ca" name="burger_name">
	</div>
	<button type="submit">Add Burger</button>
</form>